<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        tools:context="id.sch.smktelkom_mlg.tugas01.xirpl1022.tugaspertamaku.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengisian Biodata"
            android:textAlignment="center"
            android:textSize="26dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="115dp"
            android:layout_height="107dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_logo" />

        <EditText
            android:id="@+id/Nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama"
            android:textSize="16dp"
            tools:text="Nama" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="16dp"
            tools:text="Email" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="142dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelas :"
                android:textSize="21dp" />

            <RadioGroup
                android:id="@+id/Kelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButton10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="127dp"
                        android:layout_marginStart="127dp"
                        android:text="10" />

                    <RadioButton
                        android:id="@+id/radioButton11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@+id/radioButton10"
                        android:layout_toRightOf="@+id/radioButton10"
                        android:text="11" />

                    <RadioButton
                        android:id="@+id/radioButton12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@+id/radioButton11"
                        android:layout_toRightOf="@+id/radioButton11"
                        android:text="12" />

                </RelativeLayout>
            </RadioGroup>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Kelas"
                android:text="Jurusan :"
                android:textSize="21dp" />

            <Spinner
                android:id="@+id/Jurusan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp"
                android:layout_toEndOf="@+id/textView2"
                android:layout_toRightOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Jurusan"
                android:text="Hobi :"
                android:textSize="21dp" />

            <CheckBox
                android:id="@+id/checkBoxNulis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/Jurusan"
                android:layout_alignStart="@+id/Jurusan"
                android:layout_below="@+id/Jurusan"
                android:text="Menulis" />

            <CheckBox
                android:id="@+id/checkBoxLukis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Jurusan"
                android:layout_toEndOf="@+id/checkBoxNulis"
                android:layout_toRightOf="@+id/checkBoxNulis"
                android:text="Melukis" />

            <CheckBox
                android:id="@+id/checkBoxDesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Jurusan"
                android:layout_toEndOf="@+id/checkBoxLukis"
                android:layout_toRightOf="@+id/checkBoxLukis"
                android:text="Design" />

        </RelativeLayout>

        <Button
            android:id="@+id/buttonOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:text="Setuju" />

    </LinearLayout>
</ScrollView>